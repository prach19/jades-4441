{
    "manifest_version": 3,
    "name": "Summar",
    "description": "Summarizes and simplifies provacy policies of e-commerce websites.",
    "version": "1.0",
    "icons": {},
    "permissions": [
        "webNavigation",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.co.uk/*",
                "*://*.amazon.ca/*",
                "*://*.amazon.de/*"
            ],
            "js": [
                "content-scripts.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}